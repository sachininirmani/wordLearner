# Copy to .env.local for local dev
# NEVER commit real keys.

AI_API_KEY="DUMMY_KEY_FOR_DEMO"

# Optional: LibreTranslate-compatible endpoint, e.g. https://libretranslate.example.com
TRANSLATE_ENDPOINT=""

# Optional: if you later add Redis/Upstash for stronger limits
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Gemini (free tier)
GEMINI_API_KEY=

# AI rate limits (safe defaults)
AI_MAX_PER_IP_PER_DAY=5
AI_MAX_GLOBAL_PER_DAY=100
USAGE_MAX_PER_IP_PER_DAY=20

# Web Push (optional)
# Generate keys: npm run push:keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:you@example.com
# Optional secret for cron sender
PUSH_CRON_SECRET=
